{
	"manifest_version": 2,
	"author": "Myles Trevino",
	"name": "Chatsifter",
	"version": "1.3.3",
	"description": "Sift and translate YouTube chat.",
	"icons":
	{
		"16": "16.png",
		"24": "24.png",
		"32": "32.png",
		"48": "48.png",
		"64": "64.png",
		"96": "96.png",
		"128": "128.png",
		"256": "256.png",
		"512": "512.png"
	},
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"permissions": ["tabs", "activeTab", "*://*.youtube.com/*"],
	"browser_action":
	{
		"default_icon":
		{
			"16": "16.png",
			"24": "24.png",
			"32": "32.png",
			"48": "48.png",
			"64": "64.png",
			"96": "96.png",
			"128": "128.png",
			"256": "256.png",
			"512": "512.png"
		}
	},
	"background": {"scripts": ["background.js", "runtime.js"]}
}
